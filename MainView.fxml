<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefHeight="400.0" prefWidth="600.0" fx:controller="controller.MainController">
    <Label layoutX="20.0" layoutY="20.0" text="Welcome to the JavaFX MVC Application" />
    <Label layoutX="20.0" layoutY="60.0" text="Username:" />
    <TextField fx:id="usernameField" layoutX="100.0" layoutY="60.0" />
    <Label layoutX="20.0" layoutY="100.0" text="Password:" />
    <TextField fx:id="passwordField" layoutX="100.0" layoutY="100.0" />
    <Button layoutX="100.0" layoutY="140.0" text="Login" onAction="#loginUser" />
    <Button layoutX="200.0" layoutY="140.0" text="Register" onAction="#registerUser" />
</AnchorPane>